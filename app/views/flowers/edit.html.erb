<% content_for :title, "Editing flower" %>
<div class="w-full rounded-lg shadow bg-gray-800 mx-auto mt-5" style="max-width: 700px">
  <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
    <h1 class="text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl text-white">
      Edit Flower
    </h1>
    <%= form_with(model: @flower) do |form| %>
      <% if @flower.errors.any? %>
        <div style="color: red">
          <h2><%= pluralize(@flower.errors.count, "error") %> prohibited this flower from being saved:</h2>
          <ul>
            <% @flower.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div class="flex">
        <div class="w-1/2 field mb-5 mr-5">
          <%= form.label :name, class: "block text-sm mb-2 font-medium text-gray-900 text-white" %>
          <%= form.text_field :name, required: true, class: "border rounded-lg block w-full p-2.5 bg-gray-700 border-gray-600 placeholder-gray-400 text-white focus:ring-blue-500 focus:border-blue-500" %>
        </div>

        <div class="w-1/2 field mb-5 mr-5">
          <%= form.label :description, class: "block text-sm mb-2 font-medium text-gray-900 text-white" %>
          <%= form.text_field :description, required: true, class: "border rounded-lg block w-full p-2.5 bg-gray-700 border-gray-600 placeholder-gray-400 text-white focus:ring-blue-500 focus:border-blue-500" %>
        </div>
      </div>

      <div class="flex">
        <div class="w-1/2 field mb-5 mr-5">
          <%= form.label :price, class: "block text-sm mb-2 font-medium text-gray-900 text-white"  %>
          <%= form.text_field :price, required: true, class: "border rounded-lg block w-full p-2.5 bg-gray-700 border-gray-600 placeholder-gray-400 text-white focus:ring-blue-500 focus:border-blue-500" %>
        </div>

        <div class="w-1/2 field mb-5 mr-5">
          <%= form.label :stock, class: "block text-sm mb-2 font-medium text-gray-900 text-white"  %>
          <%= form.number_field :stock, required: true, class: "border rounded-lg block w-full p-2.5 bg-gray-700 border-gray-600 placeholder-gray-400 text-white focus:ring-blue-500 focus:border-blue-500" %>
        </div>
      </div>
      <div class="flex">
        <%= form.file_field :image%>
      </div>

      <div class="flex gap-2">
        <%= form.submit "Update Flower", class: "bg-blue-800 p-2 rounded-lg mt-5 hover:cursor-pointer", style: "width: 100%; cursor: pointer;"%>
        <a href="/" class="bg-blue-800 p-2 rounded-lg mt-5 text-center hover:cursor-pointer" style="width: 100%;" >Back To Flowers</a>

      </div>
    <% end %>
  </div>
</div>


